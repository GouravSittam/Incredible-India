      margin-bottom: 2rem;
    }

    /* Featured Destinations */
    .featured-destinations {
      padding: 50px 0;
    }

    .destination-card {
      margin-bottom: 30px;
      position: relative;
      overflow: hidden;
    }

    .destination-card img {
      height: 300px;
      object-fit: cover;
      transition: transform 0.3s ease-in-out;
    }

    .destination-card:hover img {
      transform: scale(1.1);
    }

    .destination-card .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      color: white;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    .destination-card:hover .overlay {
      opacity: 1;
    }

    .overlay h4 {
      font-size: 1.8rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
    }

    .overlay p {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .overlay a {
